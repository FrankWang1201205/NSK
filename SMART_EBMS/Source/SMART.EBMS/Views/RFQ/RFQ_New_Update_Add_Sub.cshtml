@model RFQ_Head_Line
@{
    Layout = null;
    List<Brand> Brand_List = ViewData["Brand_List"] as List<Brand>;
}

<p></p>
<div style="width:100%; overflow:hidden;">
    <table class="FormTable_Sim  text-nowrap">
        <tr>
            <td style="width:10px;">询价型号</td>
            <td colspan="5" style="width:10px;"><input type="text" name="Cust_Mat_Sn" class="form-control input-xs MatSn_Font" style="width:100%; font-size:14px; border:1px solid #808080; border-radius:0px;" value="@Model.Cust_Mat_Sn" /></td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>.</td>
        </tr>

        <tr>
            <th style="width:10px;">型号要求</th>
            <td colspan="5" style="width:10px;">
                <label style="cursor:pointer"><input type="checkbox" name="Cust_Mat_Sn_INFO_STR" id="Cust_Mat_Sn_Is_None_YZ" value="@Mat_Sn_INFO_Enum.油脂不限.ToString()" /> @Mat_Sn_INFO_Enum.油脂不限.ToString()</label>
                <label style="cursor:pointer; margin-left:15px;"><input type="checkbox" name="Cust_Mat_Sn_INFO_STR" id="Cust_Mat_Sn_Is_None_YX" value="@Mat_Sn_INFO_Enum.游隙不限.ToString()" /> @Mat_Sn_INFO_Enum.游隙不限.ToString()</label>
                <label style="cursor:pointer; margin-left:15px;"><input type="checkbox" name="Cust_Mat_Sn_INFO_STR" id="Cust_Mat_Sn_Is_None_CD" value="@Mat_Sn_INFO_Enum.产地不限.ToString()" /> @Mat_Sn_INFO_Enum.产地不限.ToString()</label>
            </td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>.</td>
        </tr>

        <tr>
            <th style="width:10px;">产品用途</th>
            <th style="width:10px;" colspan="7"><input type="text" class="MyInput" name="Cust_Mat_Describe" value="@Model.Cust_Mat_Describe" style="width:100%;" placeholder="客户询价产品用途信息" /></th>
            <td>.</td>
        </tr>

        <tr>
            <th style="width:10px;">* 品　牌</th>
            <td style="width:10px;">
                <select name="BID" id="BID" class="MyInput">
                    <option value="@Guid.Empty">请选择</option>
                    @foreach (var x in Brand_List)
                    {
                        if (Model.BID == x.BID)
                        {
                            <option selected="selected" value="@x.BID">@x.Brand_Name</option>
                        }
                        else
                        {
                            <option value="@x.BID">@x.Brand_Name</option>
                        }
                    }
                </select>
            </td>
            <th style="width:10px;">单　位</th>
            <td style="width:10px;"><input type="text" class="MyInput" name="Cust_Mat_Unit" value="@Model.Mat_Info.MatUnit" style="width:100px;" /></td>
            <th style="width:10px;">数　量</th>
            <td style="width:10px;"><input type="number" class="MyInput" name="Qty" value="@Model.Qty" style="width:100px; text-align:center;" /></td>
            <th style="width:10px;">紧急度</th>
            <td style="width:10px;"><input type="text" class="MyInput" name="Urgency" value="@Model.Urgency" style="width:100px;" /></td>
            <td>.</td>
        </tr>


        <tr>
            <th style="width:10px;">备注信息</th>
            <th style="width:10px;" colspan="7"><input type="text" class="MyInput" name="Line_Remark" value="@Model.Line_Remark" style="width:100%;" /></th>
            <td>.</td>
        </tr>

        <tr>
            <th>&nbsp;</th>
            <td><button type="button" onclick="Form_Add_Mat()" class="btn btn-primary btn-sm" style="width:100%;">添加产品</button></td>
            <td colspan="6">&nbsp;</td>
            <td>.</td>
        </tr>
    </table>
</div>

