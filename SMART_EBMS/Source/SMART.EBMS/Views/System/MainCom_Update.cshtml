@model MainCompany
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string Controller = ViewContext.RouteData.Values["controller"].ToString();
    string Action = ViewContext.RouteData.Values["action"].ToString();
}

@{Html.RenderPartial("_TopMenu");}
<script>TopMenuToAction("企业资料");</script>

<div id="RightDivContext" style="padding:20px;">

    <table>
        <tr>
            <td style="vertical-align:top; width:400px;">
                <div class="panel panel-default" style="width:600px;">
                    <div class="panel-heading" style="overflow:hidden;">
                        <span style="float:left; font-size:14px; font-weight:bold;">@Model.MainCompanyName</span>
                        <span style="float:right;"><a href="~/System/MainCom_Update_Sub" class="btn btn-primary btn-xs">更新基本信息</a></span>
                    </div>
                    <div class="panel-body">
                        <table class="table" style="width:100%;">
                            <tr>
                                <th style="width:100px; border-top:0px;">内部登录口令</th>
                                <td style="border-top:0px;">@Model.PinCode</td>
                            </tr>
                            <tr>
                                <th>公司经营地址</th>
                                <td>@Model.MainAddress</td>
                            </tr>
                            <tr>
                                <th>公司开票地址</th>
                                <td>@Model.MainInvoiceAddress</td>
                            </tr>
                            <tr>
                                <th>纳税人识别号</th>
                                <td>@Model.TaxpayerIdentificationNo</td>
                            </tr>
                            <tr>
                                <th>开户银行名称</th>
                                <td>@Model.MainBankInfo</td>
                            </tr>
                            <tr>
                                <th>开户银行账号</th>
                                <td>@Model.MainBankAccount</td>
                            </tr>

                            <tr>
                                <th>官网联系电话</th>
                                <td>@Model.MainTel</td>
                            </tr>

                            <tr>
                                <th>官网电子邮箱</th>
                                <td>@Model.MainEmail</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </td>
            <td style="vertical-align:top; padding-left:20px;">
                <div class="panel panel-default" style="width:200px;">
                    <div class="panel-heading">电子图章</div>
                    <div class="panel-body" style="padding:0px; text-align:center; padding-top:5px;">
                        @if (string.IsNullOrEmpty(Model.ElectronicStamp))
                        {
                            <div style="width:190px; height:150px; line-height:150px; text-align:center; overflow:hidden; color:silver;">未上传</div>
                        }
                        else
                        {
                            <img src="~/@Model.ElectronicStamp" style="width:150px;  background-color:white;" />
                        }
                    </div>
                </div>

                <div class="panel panel-default" style="width:200px;">
                    <div class="panel-heading">公司Logo</div>
                    <div class="panel-body" style="padding:0px; text-align:center; padding-top:5px;">
                        @if (string.IsNullOrEmpty(Model.ComLogo))
                        {
                            <div style="width:190px; height:105px; line-height:100px; text-align:center; overflow:hidden; color:silver;">未上传</div>
                        }
                        else
                        {
                            <img src="~/@Model.ComLogo" style="height:105px;  background-color:white;" />
                        }
                    </div>
                </div>
       
            </td>
        </tr>
    </table>


    
</div>