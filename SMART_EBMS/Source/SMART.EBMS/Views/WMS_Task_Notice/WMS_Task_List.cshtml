@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<body style="background-color:white; overflow-x:auto;overflow-y:hidden;width:1200px; margin:auto;padding-top:30px;padding-bottom:30px;">
<style>

    * {
        box-sizing: border-box;
    }
    h3 {
        font-size: 24px;
        margin-top: 20px !important;
        margin-bottom: 10px !important;
        font-family: inherit;
        font-weight: 500;
        line-height: 1.1;
        color: inherit;
        display: block;
        -webkit-margin-before: 1em;
        -webkit-margin-after: 1em;
        -webkit-margin-start: 0px;
        -webkit-margin-end: 0px;
    }
    table {
        border-spacing: 0;
        border-collapse: collapse;
    }
    table thead tr {
        height:38px;
    }
    table thead tr th {
        padding-left:10px;
        text-align:left;
        font-size: 15px;
        border-top:0;
    }

</style>

    <div>
        <table>
            <thead>
                <tr>
                    <td style="padding-right:20px;vertical-align:top;width:600px;">
                        <h3 style="text-align:center">待盘库列表</h3>
                        <div>
                            <table class="table text-nowrap" style="width:100%;font-size:15px;">
                                <tr style="background:whitesmoke;">
                                    <th style="width:150px;">创建日期</th>
                                    <th style="width:130px;">库位</th>
                                    <th style="width:130px;">当前状态</th>
                                    <th style="width:130px;">作业人</th>
                                </tr>
                            </table>
                        </div>
                        <div id="Part_Page_Context_A" style="overflow-y:auto;overflow-x:hidden;"></div>
                    </td>
                    <td style="padding-left:20px;border-left:1px solid #e2dfdf;vertical-align:top;width:500px;">
                        <h3 style="text-align:center">待移库列表</h3>
                        <div>
                            <table class="table text-nowrap" style="width:100%;font-size:15px;">
                                <tr>
                                    <th style="width:150px;background:whitesmoke;">创建日期</th>
                                    <th style="width:130px;background:whitesmoke;">移出库位</th>
                                    <th style="width:130px;background:whitesmoke;">作业人</th>
                                </tr>
                            </table>
                        </div>
                        <div id="Part_Page_Context_B" style="overflow-y:auto;overflow-x:hidden;"></div>
                    </td>
                </tr>
            </thead>
        </table>
    </div>

    <script type="text/javascript" src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-ui.min.js"></script>
<script>
        $(function () {
            FixHeightExt();
            self.setInterval("Reload_Part_Page()", 5000);
            Reload_Part_Page();
        });

        $(window).resize(function () {
            FixHeightExt();
        });

        function FixHeightExt() {
            var WinHeight = $(window).height();
            $('#Part_Page_Context_A').css('height', WinHeight - 155);
            $('#Part_Page_Context_B').css('height', WinHeight - 155);
        }

        function Reload_Part_Page() {
            $("#Part_Page_Context_A").load("/WMS_Task_Notice/WMS_Task_List_Stocktaking");
            $("#Part_Page_Context_B").load("/WMS_Task_Notice/WMS_Task_List_Move");
        }

</script>
</body>
</html>
