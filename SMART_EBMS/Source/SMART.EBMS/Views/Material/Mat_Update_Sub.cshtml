                                    {
                                        <td>&nbsp;</td>
                                    }
                                }
                            </tr>

                            <tr>
                                @for (int j = 1; j <= Model.MatSn_Length_Max; j++)
                                {
                                    <td style="padding:0px; text-align:center; color:#686868;">@j</td>
