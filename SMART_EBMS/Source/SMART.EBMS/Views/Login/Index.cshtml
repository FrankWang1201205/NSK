@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>智慧分销管理系统（SMART EBMS）</title>
    <!--设定不被快照和搜索引擎抓取 content contect-->
    <meta name="robots" content="none">
    <meta name="Baiduspider" content="noarchive">

    <script src="@Url.Content("~/Scripts/jquery-2.1.3.min.js")" type="text/javascript"></script>
    <!-- Bootstrap -->
    <link href="~/Scripts/Bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/Bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
    <!-- Bootstrap -->

    <script>
        function SetUserInfo() {
            //清空所有内容本地数据库
            localStorage.clear();
            var Password = $("#PassWord").val();
            localStorage.S_UserName = unicode($("#UserName").val());
            localStorage.S_PassWord = unicode(Password);
            localStorage.S_PinCode = unicode($("#PinCode").val());
        }

        function GetUserInfo() {
            $("#UserName").val(runicode(localStorage.S_UserName));
            $("#PassWord").val(runicode(localStorage.S_PassWord));
            $("#PinCode").val(runicode(localStorage.S_PinCode));
        }
    </script>

    <style>
        .LoginTable {
            width: 360px;
            margin: auto;
        }

            .LoginTable td {
                padding-bottom: 15px;
                font-size: 12px;
            }
    </style>

</head>
<body style="background-color: #2C3D5A; padding-top: 120px; font-family: Arial 'Microsoft YaHei UI'; ">

    <form action="/Login/Index_Post" id="ExcelForm" method="post" onsubmit="SetUserInfo()" target="_top">
        <table border="0" class="LoginTable">

            <tr>
                <td></td>
                <td style="font-size: 14px; color: white; padding-bottom:5px;">智慧分销管理系统</td>
            </tr>


            <tr>
                <td style="color: white; text-align: right; padding-right: 10px; width:90px; ">用户名</td>
                <td>
                    <input name="UserName" id="UserName" value="" class="form-control input-sm" type="text" style="width: 200px;" autocomplete="off" placeholder="用户名" />
                </td>
            </tr>

            <tr>
                <td style="color: white; text-align: right; padding-right: 10px;">密码</td>
                <td>
                    <input name="PassWord" id="PassWord" value="" class="form-control input-sm" type="password" style="width: 200px; " autocomplete="off" placeholder="密码" />
                </td>
            </tr>

            <tr>
                <td style="color: white; text-align: right; padding-right:10px;">企业代码</td>
                <td>
                    <input name="PinCode" id="PinCode" value="" class="form-control input-sm" type="text" style="width: 200px; " autocomplete="off" placeholder="企业代码" />
                </td>
            </tr>

            @if (TempData["LoginError"] != null)
            {
            <tr>
                <td></td>
                <td style="color:yellow;">@TempData["LoginError"]</td>
            </tr>                
            }

            <tr>
                <td></td>
                <td>
                    <button onmousemove="SetUserInfo()" type="submit" class="btn btn-primary btn-sm" style="width: 200px; background-color:#E57918; border:0px; font-size:14px; ">登 陆</button>
                </td>
            </tr>
        </table>
    </form>
</body>
</html>